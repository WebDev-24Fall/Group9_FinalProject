@model Group9_FinalProject.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageURL" alt="@Model.Name" class="img-fluid">
        </div>
        <div class="col-md-6">
            <h1>@Model.Name</h1>
            <h3 class="text-muted">@Model.Price.ToString("C")</h3>
            <p>@Model.Description</p>
            <p><strong>Stock Available:</strong> @Model.StockQuantity</p>

            <form method="post" action="@Url.Action("AddToCart", "Cart")">
                <input type="hidden" name="ProductID" value="@Model.ProductID" />
                <div class="form-group">
                    <label for="quantity">Quantity:</label>
                    <select name="Quantity" id="quantity" class="form-control w-50">
                        @for (int i = 1; i <= 10; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Add to Cart</button>
            </form>
        </div>
    </div>
</div>